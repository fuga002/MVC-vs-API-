@model OnlineShop.Common.Models.ProductModels.CreateProductModel

<form method="post" asp-action="AddProduct">
    <div class="form-control-lg">
        <div class="form-control">
            <label>Name</label>
            <input asp-for="Name" type="text"/>
        </div>
        <div class="form-control">
            <label>Description</label>
            <input asp-for="Description" type="text"/>
        </div>
        <div class="form-control">
            <label>Price</label>
            <input asp-for="Price" type="number"/>
        </div>
        <div class="form-control">
            <label>Count</label>
            <input asp-for="Count" type="number"/>
        </div>
        <div class="form-control">
            <label>CategoryId</label>
            <input asp-for="CategoryId" type="number"/>
        </div>
        <div class="form-control">
            <button class="btn btn-primary" type="submit">Add product</button>
        </div>
    </div>
</form>